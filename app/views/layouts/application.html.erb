  <%= csrf_meta_tags %> 
  <%= stylesheet_link_tag 'navbar-fixed-top', media: 'all' %>
</head>
<body>
  <%= render 'shared/navigation' %>
  <div id="main-container" class="container">
    <div class="row">
       <div class="col-md-9">
         <%= yield %>
       </div>
       <div class="col-md-3">
         <h2> About </h2>
         <p> HashtagSearch application allow you to follow in Twitter 
some events using hashtags </p>
       </div> 
  </div>
  <%= render 'shared/footer' %>

