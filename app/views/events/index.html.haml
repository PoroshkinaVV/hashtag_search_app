%h1 Listing events

%table
  %thead
    %tr
      %th Name
      %th Start at
      %th End at
      %th Description
      %th Renew period
      %th User
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.name
        %td= event.start_at
        %td= event.end_at
        %td= event.description
        %td= event.renew_period
        %td= event.user.username
        %td= link_to 'Show', event, class: 'btn btn-primary btn-xs'
        %td= link_to 'Edit', edit_event_path(event), class: 'btn btn-info btn-xs'
        %td= link_to 'Destroy', event, class: 'btn btn-danger btn-xs', :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Event', new_event_path
