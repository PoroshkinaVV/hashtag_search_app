%h1 Listing events

%table
  %thead
    %tr
      %th Name
      %th Start date
      %th End date
      %th Description
      %th Renew period
      %th User
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.name
        %td= event.start_date
        %td= event.end_date
        %td= event.description
        %td= event.renew_period
        %td= event.user
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

