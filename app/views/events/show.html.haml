%p#notice= notice

%p
  %b Name:
  = @event.name
%p
  %b Start at:
  = @event.start_at
%p
  %b End at:
  = @event.end_at
%p
  %b Description:
  = @event.description
%p
  %b Renew period:
  = @event.renew_period
%p
  %b User:
  = @event.user.username
%p
  = @tweets = $client.search("#ruby")
  = @event.hashtag_events.join(',  ')
  - @tweets.each do |tweet|
    .content
      = tweet.text  
= link_to 'Edit', edit_event_path(@event)
\|
= link_to 'Back', events_path
