= form_for @hashtag do |f|
  - if @hashtag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hashtag.errors.count, "error")} prohibited this hashtag from being saved:"
      %ul
        - @hashtag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
